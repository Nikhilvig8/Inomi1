<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 content-width dashboard">
                <div class="row">
                    <h2 class="col-md-12"> Student Add New</h2>
                </div>
            </div>
        </div>
        <div class="report-details-cover">
            <div>
                @if (TempData["Message"] != null || TempData["Message"].ToString() != "")
                {
                    <label style="font:bold;color:forestgreen;font-size: medium;margin-right: 575px;" id="msgErroStudent" class="diff-hd">
                        @TempData["Message"]
                    </label>

                }
                <label id="tab" style="display:none"> @TempData["tab"]</label>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <nav class="nav-tabs-cover">
                        <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                            <button type="button" class="nav-item nav-link active" id="academics-tab" data-toggle="tab" href="#academics" role="tab" aria-controls="academics" aria-selected="true">
                                <span>Academics</span>
                            </button>
                            <button type="button" class="nav-item nav-link" id="Test-Reports-tab" data-toggle="tab" href="#Test-Reports" role="tab" aria-controls="Test-Reports" aria-selected="false">
                                <span>Test Reports</span>
                            </button>
                            <button type="button" class="nav-item nav-link" id="ECA-tab" data-toggle="tab" href="#ECA" role="tab" aria-controls="ECA" aria-selected="false">
                                <span>Extra Curricular Activites</span>
                            </button>
                            <button type="button" class="nav-item nav-link" id="leadership-tab" data-toggle="tab" href="#leadership" role="tab" aria-controls="leadership" aria-selected="false">
                                <span>Leadership Positions in School</span>
                            </button>
                            <button type="button" class="nav-item nav-link" id="Pathfinder-tab" data-toggle="tab" href="#leadership" role="tab" aria-controls="leadership" aria-selected="false">
                                <span>Pathfinder Picture</span>
                            </button>

                        </div>
                    </nav>
                    <div class="tab-content px-sm-0 clearfix" id="nav-tabContent">

                        <div class="tab-pane" id="AcedemicsGrid" role="tabpanel" aria-labelledby="nav-home-tab">
                            <div class="students-table-cover">
                                <div class="report-details">
                                    <h2 class="diff-hd">Acedemics List</h2>
                                    <div class="reports-hdr">
                                        <div class="d-flex">
                                            <button type="submit" class="btn blue-btn add-new" id="AddNew">Add New</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="table-responsive cmn-table">
                                    <table class="table table-striped" id="StudentDetails">
                                        <thead>
                                            <tr>
                                                <th scope="col">Student</th>
                                                <th scope="col">Class</th>
                                                <th scope="col">Year</th>
                                                <th scope="col">Board</th>
                                                <th scope="col">School</th>
                                                <th scope="col">GPA Mark</th>
                                                <th scope="col"></th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (ViewBag.Acedemics != null)
                                            {
                                                foreach (var dr in ViewBag.Acedemics.Rows)
                                                {
                                                    <tr>
                                                        <td>@dr["Student"]</td>
                                                        <td>@dr["Class"]</td>
                                                        <td>@dr["Year"]</td>
                                                        <td>@dr["Board"]</td>
                                                        <td>@dr["School"]</td>
                                                        <td>@dr["OverAllGPAMark"]</td>
                                                        <td><label id="ID" style="display: none;">@dr["Id"]</label><button type="button" class="fas fa-trash" id="delete"></button><button type="button" class="fas fa-pencil-alt" id="edit"></button></td>
                                                    </tr>
                                                }
                                            }

                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>

                        <div class="tab-pane" id="TestScoreGrid" role="tabpanel" aria-labelledby="nav-home-tab">
                            <div class="students-table-cover">
                                <div class="report-details">
                                    <h2 class="diff-hd">Test List</h2>
                                    <div class="reports-hdr">
                                        <div class="d-flex">
                                            <button type="submit" class="btn blue-btn add-new" id="btnTestAddNew">Add New</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="table-responsive cmn-table">
                                    <table class="table table-striped" id="TestScoreDetails">
                                        <thead>
                                            <tr>
                                                <th scope="col">Student</th>
                                                <th scope="col">Test Name</th>
                                                <th scope="col">Score</th>
                                                <th scope="col"></th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (ViewBag.TestScore != null)
                                            {
                                                foreach (var dr in ViewBag.TestScore.Rows)
                                                {
                                                    <tr>
                                                        <td>@dr["Student"]</td>
                                                        <td>@dr["TestName"]</td>
                                                        <td>@dr["Score"]</td>
                                                        <td><label id="ID" style="display: none;">@dr["Id"]</label><button type="button" class="fas fa-trash" id="delete"></button><button type="button" class="fas fa-pencil-alt" id="edit"></button></td>
                                                    </tr>
                                                }
                                            }

                                        </tbody>
                                    </table>

