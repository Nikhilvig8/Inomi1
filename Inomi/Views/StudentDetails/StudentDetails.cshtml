<script src="~/Js/ActivitiesDetails.js"></script>
<script src="~/Js/LeadershipDetails.js"></script>
<script src="~/Js/Pathfinder.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#AcedemicsGrid').show();

        var tab = $('#tab').text().trim();

        if ('AcedemicsGrid' == tab) {
            $('#academics-tab').addClass('active');
            $('#AcedemicsGrid').show();
        }
        else if ('TestScoreGrid' == tab) {
            $('#Test-Reports-tab').addClass('active');
            $('#academics-tab').removeClass('active');
            $('#AcedemicsGrid').hide();
            $('#TestScoreGrid').show();
        }
        else if ('ActivitiesGrid' == tab) {
            $('#ECA-tab').addClass('active');
            $('#academics-tab').removeClass('active');
            $('#AcedemicsGrid').hide();
            $('#ActivitiesGrid').show();
        }
        else if ('LeadershipGrid' == tab) {
            $('#leadership-tab').addClass('active');
            $('#academics-tab').removeClass('active');
            $('#AcedemicsGrid').hide();
            $('#LeaderShipGrid').show();
        }

        else if ('PathfinderGrid' == tab) {
            $('#Pathfinder-tab').addClass('active');
            $('#academics-tab').removeClass('active');
            $('#AcedemicsGrid').hide();
            $('#PathfinderGrid').show();
        }


    });
</script>
