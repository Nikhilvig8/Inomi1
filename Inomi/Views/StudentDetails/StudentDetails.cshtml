                                        <thead>
                                            <tr>
                                                <th scope="col">Student</th>
                                                <th scope="col">Picture name</th>
                                                <th scope="col">Date</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (ViewBag.Pathfinder != null)
                                            {
                                                foreach (var dr in ViewBag.Pathfinder.Rows)
                                                {
                                                    <tr>
                                                        <td>@dr["FirstName"]</td>
                                                        <td>@dr["PathfinderName"]</td>
                                                        <td>@dr["CreatedDateTime"]</td>
                                                    </tr>
                                                }
                                            }

                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>


