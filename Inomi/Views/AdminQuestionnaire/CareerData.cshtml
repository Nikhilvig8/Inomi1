
@{
    ViewBag.Title = "CareerData";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>inomi Dashboard</title>

    <!-- Web Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900&display=swap"
          rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.css"
          rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://unpkg.com/simplebar@latest/dist/simplebar.css" />

    <!-- simple scrollbar-->
    <link rel="stylesheet"
          href="https://unpkg.com/simplebar@latest/dist/simplebar.css" />


    <!-- Latest compiled and minified CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css"
          rel="stylesheet" />

    <!-- custom scrollbar -->
    <link rel="stylesheet" href="~/css/jquery.mCustomScrollbar.min.css" />

    <!-- calender CSS -->
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css"
          rel="stylesheet"
          type="text/css" />

    <!-- Data Tables -->
    <link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css"
          rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style-admin.css" />
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <div id="sidebar">
            <div class="admin-user">
                <a class="navbar-brand" href="dashboard.html">
                    <img src="~/images/inomi-logo.png" alt="PWC logo" />
                </a>
            </div>
            <ul class="sidebar-nav nav-pills nav-stacked" id="menu">
                <li>
                    <a href="/Admin/Career" class="data-entry active">
                        <span>Career</span>
                    </a>
                </li>
            </ul>
            <div class="sidenav-bg mask-strong"></div>
        </div>
        <!-- /#sidebar-wrapper -->
        <div class="content" id="content">
            <header>
                <nav class="navbar navbar-expand-lg navbar-light  fixed-top top-navbar">
                    <button type="button"
                            id="sidebarCollapse"
                            class="btn d-block d-sm-none">
                        <svg class="svg-inline--fa fa-align-left fa-w-14"
                             aria-hidden="true"
                             data-prefix="fas"
                             data-icon="align-left"
                             role="img"
                             xmlns="http://www.w3.org/2000/svg"
                             viewBox="0 0 448 512"
                             data-fa-i2svg="">
                            <path fill="currentColor"
                                  d="M288 44v40c0 8.837-7.163 16-16 16H16c-8.837 0-16-7.163-16-16V44c0-8.837 7.163-16 16-16h256c8.837 0 16 7.163 16 16zM0 172v40c0 8.837 7.163 16 16 16h416c8.837 0 16-7.163 16-16v-40c0-8.837-7.163-16-16-16H16c-8.837 0-16 7.163-16 16zm16 312h416c8.837 0 16-7.163 16-16v-40c0-8.837-7.163-16-16-16H16c-8.837 0-16 7.163-16 16v40c0 8.837 7.163 16 16 16zm256-200H16c-8.837 0-16 7.163-16 16v40c0 8.837 7.163 16 16 16h256c8.837 0 16-7.163 16-16v-40c0-8.837-7.163-16-16-16z"></path>
                        </svg><!-- <i class="fas fa-align-left"></i> -->
                    </button>
                    <button class="navbar-toggler"
                            type="button"
                            data-toggle="collapse"
                            data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse top-nav-content"
                         id="navbarSupportedContent">
                        <ul class="nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link dropdown-toggle" href="javascript:void;">
                                    <div class="d-inline-block align-middle">
                                        <span>@FormsAuthentication.Decrypt(Request.Cookies[FormsAuthentication.FormsCookieName].Value).Name</span>
                                        <br />
                                        <span class="bold-fonts">Admin</span>
                                    </div>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link dropdown-toggle" href="/LoginQuestionnaire/LogOut">
                                    <i class="material-icons">
                                        power_settings_new
                                    </i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <div id="page-content-wrapper" class="mb-5">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12 content-width dashboard">
                            <div class="row">
                                <h2 class="col-md-12"></h2>
                            </div>
                        </div>
                    </div>
                    <div class="signature-strength-results career-mapping">
                        <input id="CareerId" type="hidden" value="@ViewBag.CareerFields.Id" />
                        <h2>@ViewBag.CareerFields.MainField - @ViewBag.CareerFields.SubField</h2>

                        <div id="accordion" class="myaccordion" data-simplebar>
                            <div class="card-cover">
                                <div class="card">
                                    <div class="card-header" id="headingOne">
                                        <h2 class="mb-0">
                                            <button class="d-flex align-items-center justify-content-between btn btn-link"
                                                    data-toggle="collapse"
                                                    data-target="#collapseOne"
                                                    aria-expanded="true"
                                                    aria-controls="collapseOne"
                                                    style="font-size:16px">
                                                Description
                                                <span class="fa-stack fa-sm">
                                                    <i class="fas fa-circle fa-stack-2x"></i>
                                                    <i class="fas fa-minus fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </button>
                                        </h2>
                                    </div>
                                    <div id="collapseOne"
                                         class="collapse show"
                                         aria-labelledby="headingOne"
                                         data-parent="#accordion">
                                        <div class="card-body">
                                            <div class="projects-cover">
                                                <div class="padd">
                                                    <h4><b>Main Field Description</b></h4>
                                                    <textarea class="form-control" rows="4" id="maindescription">@ViewBag.Description.MainFieldDescription</textarea>
                                                </div>
                                                <div>
                                                    <h4><b>Sub Field Description</b></h4>
                                                    <textarea class="form-control" rows="4" id="subdescription">@ViewBag.Description.SubFieldDescription</textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header" id="headingTwo">
                                        <h2 class="mb-0">
                                            <button class="d-flex align-items-center justify-content-between btn btn-link collapsed"
                                                    data-toggle="collapse"
                                                    data-target="#collapseTwo"
                                                    aria-expanded="false"
                                                    aria-controls="collapseTwo"
                                                    style="font-size:16px">
                                                Courses
                                                <span class="fa-stack fa-2x">
                                                    <i class="fas fa-circle fa-stack-2x"></i>
                                                    <i class="fas fa-plus fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </button>
                                        </h2>
                                    </div>
                                    <div id="collapseTwo"
                                         class="collapse"
                                         aria-labelledby="headingTwo"
                                         data-parent="#accordion">
                                        <div class="card-body">
                                            <div class="projects-cover">
                                                <div class="padd">
                                                    <h4><b>Courses</b></h4>
                                                    <textarea class="form-control" rows="2" id="course">@ViewBag.CourseWork.CourseWork</textarea>
                                                    <span><b>Note:</b></span><span style="color:red"> Please Use <b>Semi-Colon Symbol (;)</b> As Separator To Add Multiple Courses.</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header" id="headingThree">
                                        <h2 class="mb-0">
                                            <button class="d-flex align-items-center justify-content-between btn btn-link collapsed"
                                                    data-toggle="collapse"
                                                    data-target="#collapseThree"
                                                    aria-expanded="false"
                                                    aria-controls="collapseThree"
                                                    style="font-size:16px">
                                                Reading Resources
                                                <span class="fa-stack fa-2x">
                                                    <i class="fas fa-circle fa-stack-2x"></i>
                                                    <i class="fas fa-plus fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </button>
                                        </h2>
                                    </div>
                                    <div id="collapseThree"
                                         class="collapse"
                                         aria-labelledby="headingThree"
                                         data-parent="#accordion">
                                        <div class="card-body">
                                            <div class="projects-cover">
                                                <div class="padd">
                                                    <div>
                                                        <h4><b>Reading</b></h4>
                                                        <button class="addnewbtn blue-btn" style="float:right; margin-top:-2rem;" id="addreading">Add New</button>
                                                    </div>
                                                    <span><b>Note:</b></span><span style="color:red;"> Please Use <b>Hash Symbol (#)</b> If No Link Is there.</span>
                                                    <br />
                                                    <div id="reading">
                                                        @{
                                                            int reading = 1;
                                                        }
                                                        @foreach (var item in @ViewBag.Reading)
                                                        {
                                                            var name = "reading" + @reading;
                                                            var link = "readinglink" + @reading;
                                                            var trash = "readingtrash" + @reading;

                                                            <div class="row2">
                                                                <label style="padding-right:1rem;">@reading.</label>
                                                                <input class="form-control col-md-7" value="@item.Name" placeholder="Name" id="@name" />
                                                                <input class="form-control col-md-3" value="@item.Link" placeholder="Link" id="@link" style="margin-left:1rem;margin-bottom:1rem;" />
                                                                <button class="trash" id="@trash"><i class="fas fa-trash" style="color:red"></i></button>
                                                            </div>
                                                            reading++;
                                                        }

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header" id="headingFour">
                                        <h2 class="mb-0">
                                            <button class="d-flex align-items-center justify-content-between btn btn-link collapsed"
                                                    data-toggle="collapse"
                                                    data-target="#collapseFour"
                                                    aria-expanded="false"
                                                    aria-controls="collapseFour"
                                                    style="font-size:16px">
                                                Video Resources
                                                <span class="fa-stack fa-2x">
                                                    <i class="fas fa-circle fa-stack-2x"></i>
                                                    <i class="fas fa-plus fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </button>
                                        </h2>
                                    </div>
                                    <div id="collapseFour"
                                         class="collapse"
                                         aria-labelledby="headingFour"
                                         data-parent="#accordion">
                                        <div class="card-body">
                                            <div class="projects-cover">
                                                <div class="padd">
                                                    <div>
                                                        <h4><b>Videos</b></h4>
                                                        <button class="addnewbtn blue-btn" style="float:right; margin-top:-2rem;" id="addvideos">Add New</button>
                                                    </div>
                                                    <br />
                                                    <div id="videos">
                                                        @{
                                                            int videos = 1;
                                                        }
                                                        @foreach (var item in @ViewBag.Videos)
                                                        {
                                                            var name = "videos" + @videos;
                                                            var link = "videoslink" + @videos;
                                                            var trash = "videostrash" + @videos;
                                                            <div class="videos2">
                                                                <label style="padding-right:1rem;">@videos.</label>
                                                                <input class="form-control col-md-7" value="@item.Video" placeholder="Name" id="@name" />
                                                                <input class="form-control col-md-3" value="@item.Link" placeholder="Link" id="@link" style="margin-left:1rem;margin-bottom:1rem;" />
                                                                <button class="trash" id="@trash"><i class="fas fa-trash" style="color:red"></i></button>
                                                            </div>
                                                            videos++;
                                                        }

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header" id="headingFive">
                                        <h2 class="mb-0">
                                            <button class="d-flex align-items-center justify-content-between btn btn-link collapsed"
                                                    data-toggle="collapse"
                                                    data-target="#collapseFive"
                                                    aria-expanded="false"
                                                    aria-controls="collapseFive"
                                                    style="font-size:16px">
                                                Online Course Resources
                                                <span class="fa-stack fa-2x">
                                                    <i class="fas fa-circle fa-stack-2x"></i>
                                                    <i class="fas fa-plus fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </button>
                                        </h2>
                                    </div>
                                    <div id="collapseFive"
                                         class="collapse"
                                         aria-labelledby="headingFive"
                                         data-parent="#accordion">
                                        <div class="card-body">
                                            <div class="projects-cover">
                                                <div class="padd">
                                                    <div>
                                                        <h4><b>Online Courses</b></h4>
                                                        <button class="addnewbtn blue-btn" style="float:right; margin-top:-2rem;" id="addonline">Add New</button>
                                                    </div>
                                                    <br />
                                                    <div id="online">
                                                        @{
                                                            int online = 1;
                                                        }
                                                        @foreach (var item in @ViewBag.OnlineCourses)
                                                        {
                                                            var name = "online" + @online;
                                                            var link = "onlinelink" + @online;
                                                            var trash = "onlinetrash" + @online;

                                                            <div class="online2">
                                                                <label style="padding-right:1rem;">@online.</label>
                                                                <input class="form-control col-md-7" value="@item.OnlineCourse" placeholder="Name" id="@name" />
                                                                <input class="form-control col-md-3" value="@item.Link" placeholder="Link" id="@link" style="margin-left:1rem;margin-bottom:1rem;" />
                                                                <button class="trash" id="@trash"><i class="fas fa-trash" style="color:red"></i></button>
                                                            </div>
                                                            online++;
                                                        }

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <br />
                                <div>
                                    <center><button class="addnewbtn blue-btn" id="update">Update</button></center>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <footer>
        <p>inomi © <label id="year">2019</label> All rights reserved.</p>
    </footer>
    <div class="overlay"></div>
    <div class="overlay phone"></div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script src="~/script/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js"
            type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"
            type="text/javascript"></script>
    <script src="https://unpkg.com/simplebar@latest/dist/simplebar.min.js"></script>
    <!-- simple scrollbar-->
    <script src="https://unpkg.com/simplebar@latest/dist/simplebar.min.js"></script>
    <script src="~/script/custom.js"></script>

    <script src="~/Js/Js.js"></script>
    <script>
        $(document).ready(function () {
            var d = new Date();
            var year = d.getFullYear();
            $("#year").text(year);

            $('.sidebar-toggler').click(function () {
                $('.overlay').show();
                $('#sidebar-wrapper').addClass('open');
            });
            $('.overlay').click(function () {
                $('#sidebar-wrapper').removeClass('open');
                $(this).hide();
            });
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar, #content, .top-navbar, .sidebar-nav  span').toggleClass(
                    'active'
                );
                if ($(window).width() < 768) {
                    $('.sub-menu').removeClass('icon-view');
                } else {
                    $('.sub-menu').addClass('icon-view');
                }
                if ($('.sidebar-nav span').hasClass('active')) {
                    $('.sidebar-nav span.active').fadeOut();
                } else {
                    $('.sidebar-nav span').fadeIn();
                }
                $('.collapse.in').toggleClass('in');
                $('.overlay.phone').toggleClass('active');
            });
            $('.sidebar-nav').mCustomScrollbar();
        });
        $('.select2').select2();
        $('#accordion').on('hide.bs.collapse show.bs.collapse', e => {
            $(e.target)
                .prev()
                .find('i:last-child')
                .toggleClass('fa-minus fa-plus');
        });
    </script>
</body>
</html>