
@model Inomi.Models.Student.Dashboard
<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 content-width dashboard">
                <div class="row">
                    <h2 class="col-md-12">Application View</h2>
                </div>
            </div>
        </div>

        <div class="report-details-cover application-view">
            <div class="filter-section">

                <div class="search-section">
                    <h2>Search</h2>
                    <div class="form-group">
                        <label>College/School Name</label>

                        <div class="selectdiv">

                            @Html.DropDownList("CollegeList", (IEnumerable<SelectListItem>)ViewBag.CollegeList, "Select", htmlAttributes: new { id = "CollegeList", @class = "form-control" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label>Country</label>

                        <div class="selectdiv">

                            @Html.DropDownList("CountryList", (IEnumerable<SelectListItem>)ViewBag.CountryList, "Select", htmlAttributes: new { id = "CountryList", @class = "form-control" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label>City</label>
                        <div class="selectdiv">
                            @Html.DropDownList("CityList", new SelectList(string.Empty, "Value", "Text"), "Select", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group mb-0">
                        <label>Course</label>
                        <div class="selectdiv">
                            @Html.DropDownList("CourseList", new SelectList(string.Empty, "Value", "Text"), "Select", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="checkbox-section">
                    <h2>Filter Results</h2>
                    <div class="checkbox-repeat-cover" data-simplebar>

                        <div class="checkbox-inner">
                            @foreach (var item in Model.ranklist.Select((x, i) => new { Data = x, Index = i + 1 }))
                            {
                                <div class="custom-checkbox">

                                    <label class="checkbox">
                                        @item.Data.Data
                                        <input type="checkbox" />
                                        <span class="checkbox-checkmark"></span>
                                    </label>
                                </div>
                            }


                        </div>
                    </div>
                </div>
            </div>
            <div class="result-section">
                <!-- Nav pills -->
                <div class="tabs-header-section">
                    <ul>
                        <li class="dark">
                            List
                        </li>
                        <li>
                            <ul class="nav nav-pills">
                                <li class="nav-item">
                                    <a class="nav-link active"
                                       data-toggle="pill"
                                       href="#home">All</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " data-toggle="pill" href="#home">Longlist</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="pill" href="#home">Student Shortlist</a>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </div>
                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane active" id="home">

                        <div class="filter-selected-content-cover">
                            <div class="selected-content-header">
                                <h3>College/School Name</h3>
                                <h3>List</h3>
                            </div>

                            <div class="selected-content-body" id="selectedContent">
                                @foreach (var item in Model.Collegeshortlist.Select((x, i) => new { Data = x, Index = i + 1 }))
                                {
                                    <div class="common-university-box">
                                        <div class="university-header">
                                            <h3 class="university-name">@item.Data.NameOfCollege</h3>
                                            <h3 class="selected-university ">

                                                @if (@item.Data.Status == "-")
                                                {
                                                    <div class="dropdown">
                                                        @Html.Hidden("CollegeID", @item.Data.Id)
                                                        <button class="btn btn-default dropdown-toggle p-0 add-text"
                                                                type="button"
                                                                data-toggle="dropdown">
                                                            <i class="fa fa-plus"></i>
                                                            Add
                                                        </button>
                                                        <ul class="dropdown-menu select-list">
                                                            <li><a href="#">Longlist</a></li>
                                                            <li><a href="#">Student Shortlist</a></li>
                                                        </ul>
                                                    </div>

                                                }

                                                else
                                                {
                                                    <span class="btn blue-btn">@item.Data.Status</span>
                                                }

                                            </h3>
                                        </div>
                                        <div class="university-content">
                                            <div id="overview" class="myaccordion">
                                                <div class="card-cover">
                                                    <div class="card">
                                                        <div class="card-header" id="Cricket">
                                                            <h2 class="mb-0">
                                                                <button class="d-flex align-items-center btn btn-link"
                                                                        data-toggle="collapse"
                                                                        data-target="#Cricket_@item.Index"
                                                                        aria-expanded="false"
                                                                        aria-controls="Cricket">
                                                                    <span class="fa-stack fa-sm mr-2">
                                                                        <i class="fas fa-circle fa-stack-2x"></i>
                                                                        <i class="fas fa-plus fa-stack-1x fa-inverse"></i>
                                                                    </span>
                                                                    Overview
                                                                </button>
                                                            </h2>
                                                        </div>
                                                        <div id="Cricket_@item.Index"
                                                             class="collapse"
                                                             aria-labelledby="Cricket1"
                                                             data-parent="#overview">
                                                            <div class="card-body">
                                                                <p>
