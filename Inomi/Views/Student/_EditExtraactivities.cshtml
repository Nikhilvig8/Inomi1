@model Inomi.Models.Student.Dashboard

<!-- Modal Header -->
<div class="modal-header">
    <h4 class="modal-title">Add Extra Curricular Activites</h4>
    <button type="button" class="close" data-dismiss="modal">
        <span>x</span>
    </button>
</div>

<!-- Modal body -->
<div class="modal-body">
    @Html.Hidden("Id", @Model.EditExtraCurricularActivites.id)
    <div class="row">
        <div class="form-group col-sm-3 col-6">
            <label>Activities</label>
            @Html.EditorFor(m=>m.EditExtraCurricularActivites.Activities,new { htmlAttributes = new { @class = "form-control", @id = "Activities", @Name = "Activities" } })
        </div>
        <div class="form-group col-sm-3 col-6">
            <label>Achievements</label>
            @Html.EditorFor(m=>m.EditExtraCurricularActivites.Achievements,new { htmlAttributes = new { @class = "form-control", @id = "Achievements", @Name = "Achievements" } })
        </div>
        <div class="form-group col-sm-6 col-12">
            <label>Details</label>
            @Html.EditorFor(m=>m.EditExtraCurricularActivites.Details, new { htmlAttributes = new { @class = "form-control", @id = "Details", @Name = "Details" } })
        </div>
    </div>
</div>
<!-- Modal footer -->
<div class="modal-footer">
    <button type="button" class="btn blue-btn" id="EditCurricularActivitesbutton">Add</button>
</div>