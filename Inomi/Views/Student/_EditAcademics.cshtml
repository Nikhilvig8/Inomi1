@model Inomi.Models.Student.Dashboard

<!-- Modal Header -->
<div class="modal-header">
    <h4 class="modal-title">Add Academics</h4>
    <button type="button" class="close" data-dismiss="modal">
        <span>x</span>
    </button>
</div>

<!-- Modal body -->
<div class="modal-body">
    @Html.Hidden("Id", @Model.EditAcademics.Id)
    <div class="row">
        <div class="form-group col-sm-3 col-6">
            <label>Class</label>
            @Html.EditorFor(m=>m.EditAcademics.Class, new { htmlAttributes = new { @class = "form-control Class", @id = "Class", @Name = "Class" } })
            @*@Html.EditorFor(m=>m.EditAcademics.Class,"Class", new { htmlAttributes = new { @class = "form-control Class", @id="Class", @Name="Class" } })*@

        </div>
        <div class="form-group col-sm-3 col-6">
            <label>Year</label>
            @Html.EditorFor(m=>m.EditAcademics.Year, new { htmlAttributes = new { @class = "form-control Year" , @id="Year", @Name="Year" } })
        </div>
        <div class="form-group col-sm-3 col-6">
            <label>Subject</label>
            @Html.EditorFor(m=>m.EditAcademics.Subject, new { htmlAttributes = new { @class = "form-control Subject" , @id="Subject", @Name="Subject" } })
        </div>
        <div class="form-group col-sm-3 col-6">
            <label>Board</label>
            @Html.EditorFor(m=>m.EditAcademics.Board, new { htmlAttributes = new { @class = "form-control Board", @id = "Board", @Name = "Board" } })
        </div>
        <div class="form-group col-sm-3 col-6">
            <label>School</label>
            @Html.EditorFor(m=>m.EditAcademics.School, new { htmlAttributes = new { @class = "form-control", @id = "School" , @Name = "School" } })
        </div>
        <div class="form-group col-sm-3 col-12">
            <label>Transcript</label>
            <a href="/Student/Download?CurrentFileName=@Model.EditAcademics.Transcript">
                <span class="text-underline">View</span>
            </a>
            <input type="file" id="Fichier1" name="Fichier1" >
           
        </div>
        <div class="form-group col-sm-3 col-12">
            <label>Overall GPA/Marks</label>
            @Html.EditorFor(m=>m.EditAcademics.OverAllGPAMark, new { htmlAttributes = new { @class = "form-control", @id = "OverAllGPAMark" , @Name = "OverAllGPAMark" } })
        </div>
    </div>
</div>
<!-- Modal footer -->
<div class="modal-footer">
    <button type="button" class="btn blue-btn" id="Updateacadmicbutton">Update</button>

</div>