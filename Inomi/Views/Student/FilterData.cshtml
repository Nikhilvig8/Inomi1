@model Inomi.Models.Student.Dashboard

@foreach (var item in Model.Collegeshortlist.Select((x, i) => new { Data = x, Index = i + 1 }))
{
    <div class="common-university-box">
        <div class="university-header">
            <h3 class="university-name">@item.Data.NameOfCollege</h3>
            <h3 class="selected-university ">

                @if (@item.Data.Status == "-")
                {
                    <div class="dropdown">
                        @Html.Hidden("CollegeID", @item.Data.Id)
                        <button class="btn btn-default dropdown-toggle p-0 add-text"
                                type="button"
                                data-toggle="dropdown">
                            <i class="fa fa-plus"></i>
                            Add
                        </button>
                        <ul class="dropdown-menu select-list">
                            <li><a href="#">Longlist</a></li>
                            <li><a href="#">Student Shortlist</a></li>
                        </ul>
                    </div>

                }

                else
                {
                    <span class="btn blue-btn">@item.Data.Status</span>
                }

            </h3>
        </div>
        <div class="university-content">
            <div id="overview" class="myaccordion">
                <div class="card-cover">
                    <div class="card">
                        <div class="card-header" id="Cricket">
                            <h2 class="mb-0">
                                <button class="d-flex align-items-center btn btn-link"
                                        data-toggle="collapse"
                                        data-target="#Cricket_@item.Index"
                                        aria-expanded="false"
                                        aria-controls="Cricket">
                                    <span class="fa-stack fa-sm mr-2">
                                        <i class="fas fa-circle fa-stack-2x"></i>
                                        <i class="fas fa-plus fa-stack-1x fa-inverse"></i>
                                    </span>
                                    Overview
                                </button>
                            </h2>
                        </div>
                        <div id="Cricket_@item.Index"
                             class="collapse"
                             aria-labelledby="Cricket1"
                             data-parent="#overview">
                            <div class="card-body">
                                <p>
                                    @item.Data.Description
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}