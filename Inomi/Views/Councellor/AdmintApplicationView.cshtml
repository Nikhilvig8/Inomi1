            <div class="result-section">
                <!-- Nav pills -->
                <div class="tabs-header-section">
                    <ul>
                        <li class="dark">
                            List
                        </li>
                        <li>
                            <ul class="nav nav-pills">
                                <li class="nav-item">
                                    <a class="nav-link active" id="tab"
                                       data-toggle="pill"
                                       href="#home">All</a>
                                </li>
                                @*<li class="nav-item">
                                    <a class="nav-link " data-toggle="pill" href="#home">Longlist</a>
                                </li>*@
                               
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="pill" href="#home">Final List</a>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </div>
                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane active" id="home">

                        <div class="filter-selected-content-cover">
                            <div class="selected-content-header">
                                <h3>College/School Name</h3>
                                <h3>List</h3>
                            </div>

                            <div class="selected-content-body" data-simplebar id="selectedContent" style="height:400px; overflow:auto">

                                @foreach (var item in Model.Collegeshortlist.Select((x, i) => new { Data = x, Index = i + 1 }))
                                {
                                    <div class="common-university-box">
                                        <div class="university-header">
                                            <h3 class="university-name">@item.Data.NameOfCollege</h3>
                                            <h3 class="selected-university ">

                                                @if (@item.Data.adminstatus == "-")
                                                {
                                                    <div class="dropdown">
                                                        @Html.Hidden("CollegeID", @item.Data.sequenceid)
                                                        <button class="btn btn-default dropdown-toggle p-0 add-text"
                                                                type="button"
                                                                data-toggle="dropdown">
                                                           
                                                                <i class="fa fa-plus"></i><span class="btn blue-btn" style="color:white">@item.Data.counsellorstatus</span>
                                                            


                                                        </button>
                                                        <ul class="dropdown-menu select-list">

                                                            <li><a href="#">Final List</a></li>
                                                        </ul>
                                                    </div>

                                                }

                                                else
                                                {

                                                    <span class="btn blue-btn">@item.Data.adminstatus</span>

                                                }

                                            </h3>
                                        </div>
                                        <div class="university-content">
                                            <div id="overview" class="myaccordion">
                                                <div class="card-cover">
                                                    <div class="card">
                                                        <div class="card-header" id="Cricket">
                                                            <h2 class="mb-0">
                                                                <button class="d-flex align-items-center btn btn-link"
                                                                        data-toggle="collapse"
                                                                        data-target="#Cricket_@item.Index"
                                                                        aria-expanded="false"
                                                                        aria-controls="Cricket">
                                                                    <span class="fa-stack fa-sm mr-2">
                                                                        <i class="fas fa-circle fa-stack-2x"></i>
                                                                        <i class="fas fa-plus fa-stack-1x fa-inverse"></i>
                                                                    </span>
                                                                    Overview
                                                                </button>
                                                            </h2>
                                                        </div>
                                                        <div id="Cricket_@item.Index"
                                                             class="collapse"
                                                             aria-labelledby="Cricket1"
                                                             data-parent="#overview">
                                                            <div class="card-body">
                                                                <p>
                                                                    @item.Data.Description
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
