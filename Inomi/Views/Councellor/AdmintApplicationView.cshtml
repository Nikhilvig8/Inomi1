                    <div class="form-group mb-0">
                        <label>Student List</label>

                        <div class="selectdiv">

                            @Html.DropDownList("StudentList", (IEnumerable<SelectListItem>)ViewBag.StudentList, "Select", htmlAttributes: new { @class = "form-control" })

